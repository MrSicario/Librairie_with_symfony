        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        
        <style>
            body { font-family: 'Inter', sans-serif; }
        </style>
    </head>
    <body>
        <!-- Navigation -->
        <!-- Remplacez toute la balise <nav> par : -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <div class="container">
        <a class="navbar-brand fw-bold text-primary" href="{{ path('app_home') }}">
            <i class="fas fa-book me-2"></i>Librairie Scolaire
        </a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-dark" href="{{ path('app_home') }}">
                        <i class="fas fa-home me-1"></i>Accueil
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="{{ path('app_livre_index') }}">
                        <i class="fas fa-book-open me-1"></i>Livres
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="{{ path('app_demande_index') }}">
                        <i class="fas fa-list me-1"></i>Demandes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="{{ path('app_livre_new') }}">
                        <i class="fas fa-plus me-1"></i>Ajouter un livre
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>


        <!-- Main Content -->
        <main>
            {% block body %}{% endblock %}
        </main>

        <!-- Flash Messages -->
        <div class="container mt-4">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        </div>

